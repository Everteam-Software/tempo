    <xforms:model schema="Payment.xform.xsd">
      <!-- Task Input -->
      <xforms:instance id="taskinput">
        <input xmlns="http://www.intalio.com/bpms/workflow/xforms/Examples/Store/Payment">
          <address>
            <country/>
            <state/>
            <zip/>
            <city/>
            <street2/>
            <street1/>
          </address>
          <Order>
            <reference/>
          </Order>
        </input>
      </xforms:instance>
      <!-- Task metadata - used only for People Initiating Processes Task forms -->
      <xforms:instance id="taskmetadata">
        <taskmetadata/>
      </xforms:instance>
      <!-- Task Output -->
      <xforms:instance id="taskoutput">
        <output xmlns="http://www.intalio.com/bpms/workflow/xforms/Examples/Store/Payment">
          <card>
            <expirationDate/>
            <number/>
            <name/>
            <type>amex</type>
          </card>
        </output>
      </xforms:instance>
    </xforms:model>
  </xhtml:head>
  <xhtml:body>
    <xhtml:div id="intalio-bpms-form">
      <xhtml:div id="xforms_cntrl_card">
        <xforms:group style="width : 600; height : 120" ref="instance('taskoutput')/fe:card">
          <xforms:label>Credit Card</xforms:label>
          <xhtml:div id="xforms_cntrl_expirationDate">
            <xforms:input ref="instance('taskoutput')/fe:card/fe:expirationDate">
              <xforms:label>Expiration date (MM/YY)</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_number">
            <xforms:input ref="instance('taskoutput')/fe:card/fe:number">
              <xforms:label>Card number 2:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_name">
            <xforms:input ref="instance('taskoutput')/fe:card/fe:name">
              <xforms:label>Name as displayed on the card:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_type">
            <xforms:select1 appearance="minimal" ref="instance('taskoutput')/fe:card/fe:type">
              <xforms:label>Type:</xforms:label>
              <xforms:item>
                <xforms:label>American Express</xforms:label>
                <xforms:value>amex</xforms:value>
              </xforms:item>
              <xforms:item>
                <xforms:label>MasterCard</xforms:label>
                <xforms:value>mastercard</xforms:value>
              </xforms:item>
              <xforms:item>
                <xforms:label>Visa</xforms:label>
                <xforms:value>visa</xforms:value>
              </xforms:item>
            </xforms:select1>
          </xhtml:div>
        </xforms:group>
      </xhtml:div>
      <xhtml:div id="xforms_cntrl_address">
        <xforms:group style="width : 600; height : 150" ref="instance('taskinput')/fe:address">
          <xforms:label>Shipping Address</xforms:label>
          <xhtml:div id="xforms_cntrl_country">
            <xforms:input ref="instance('taskinput')/fe:address/fe:country">
              <xforms:label>Country:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_state">
            <xforms:input ref="instance('taskinput')/fe:address/fe:state">
              <xforms:label>State/Region:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_zip">
            <xforms:input ref="instance('taskinput')/fe:address/fe:zip">
              <xforms:label>Postal Code:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_city">
            <xforms:input ref="instance('taskinput')/fe:address/fe:city">
              <xforms:label>City:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_street2">
            <xforms:input ref="instance('taskinput')/fe:address/fe:street2">
              <xforms:label>Street2:</xforms:label>
            </xforms:input>
          </xhtml:div>
          <xhtml:div id="xforms_cntrl_street1">
            <xforms:input ref="instance('taskinput')/fe:address/fe:street1">
              <xforms:label>Street1:</xforms:label>
            </xforms:input>
          </xhtml:div>
        </xforms:group>
      </xhtml:div>
      <xhtml:div id="xforms_cntrl_Order">
        <xforms:group style="width : 600; height : 60" ref="instance('taskinput')/fe:Order">
          <xforms:label>Ordered Items</xforms:label>
          <xhtml:div id="xforms_cntrl_reference">
            <xforms:input ref="instance('taskinput')/fe:Order/fe:reference">
              <xforms:label>Reference:</xforms:label>
            </xforms:input>
          </xhtml:div>
        </xforms:group>
      </xhtml:div>
    </xhtml:div>
  </xhtml:body>
</xhtml:html>
