<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="url" value="jdbc:derby://localhost:1527/target/JPADB;create=true"/>
        <property name="username" value="APP"/>
        <property name="password" value="APP"/>
    </bean>
    
  	<bean id="clusterConfig" class="org.intalio.tempo.deployment.impl.QuorumBasedCluster">
        <property name="groupName" value="test"/>
        <property name="serverId" value="server-b"/>
        <property name="clusterSize" value="3"/>
        <property name="listener" ref="deploymentService"/>
    </bean>

    <bean id="deploymentService" class="org.intalio.tempo.deployment.impl.DeploymentServiceImpl">
        <property name="scanPeriod" value="5" />
        <property name="dataSource" ref="dataSource" />
        <property name="cluster" ref="clusterConfig"/>
    </bean>

	<bean id="clusteredNode" class="org.intalio.tempo.deployment.impl.MockClusteredNode" init-method="initDeploymentService">
		<property name="service" ref="deploymentService"/>
	</bean>	

	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="ClusteredNode"/>
		<property name="service" ref="clusteredNode"/>
		<property name="serviceInterface" value="org.intalio.tempo.deployment.impl.ClusteredNode"/>
		<property name="registryPort" value="1299"/>
	</bean>
</beans>