<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://www.example.org/ta"
	xmlns:ta="http://www.example.org/ta">
  <xs:simpleType name="utcDateTime">
    <xs:restriction base="xs:dateTime">
      <xs:pattern value=".+T.+Z"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:element name="roster">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="ta:mechanic"/>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="ta:avionic"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="mechanic">
    <xs:complexType>
      <xs:attribute name="user-id" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="25"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="user-name" type="xs:string" />
      <xs:attribute name="certified" use="required" type="xs:boolean"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="avionic">
    <xs:complexType>
      <xs:attribute name="user-id" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="25"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="user-name" type="xs:string" />
    </xs:complexType>
  </xs:element>
  <xs:element name="incidents">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="ta:rtr"/>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="ta:hil"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="rtr">
    <xs:complexType>
      <xs:attribute name="rtr-id" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="25"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="limit-date" use="required" type="xs:date"/>
      <xs:attribute name="description" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="255"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="ad" use="required" type="xs:boolean"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="hil">
    <xs:complexType>
      <xs:attribute name="hil-slip-id" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="25"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="limit-date" use="required" type="xs:date"/>
      <xs:attribute name="description" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="255"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
    </xs:complexType>
  </xs:element>
  <xs:element name="ta-list">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="ta:ta"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="ta">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" maxOccurs="1" ref="ta:roster"/>
        <xs:element minOccurs="0" maxOccurs="1" ref="ta:incidents"/>
      </xs:sequence>
      <xs:attribute name="ta-id" use="required" type="xs:string"/>
      <xs:attribute name="aircraft-id" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="3"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="scheduled-arrival-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="scheduled-arrival-flight-number" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="6"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="actual-arrival-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="scheduled-departure-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="scheduled-departure-flight-number" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="6"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="actual-departure-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="stand" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="6"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="inspection-type" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="6"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="comment" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:maxLength value="255"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="expected-start-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="expected-stop-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="expected-release-datetime" use="required" type="ta:utcDateTime"/>
      <xs:attribute name="late" use="required" type="xs:boolean"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
