<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
  "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
    <form-beans>
        <form-bean name="hello" type="org.orbeon.oxf.struts.examples.hello.HelloForm"/>
    </form-beans>

    <action-mappings>

        <action path="/hello"
            type="org.orbeon.oxf.struts.examples.hello.HelloAction"
            name="hello">
            <forward name="success" path="/WEB-INF/struts-view/view/helloModule.xpl"/>
        </action>

    </action-mappings>

    <message-resources parameter="org.orbeon.oxf.struts.examples.ModuleResources"
        null="false" key="messages-module" />

</struts-config>
