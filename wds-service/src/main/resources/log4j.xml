<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
    <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout"><param name="ConversionPattern" value="%d{ISO8601} %-5p %c %x - %m%n"/></layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter"><param name="LevelMin" value="debug" /></filter>
    </appender>
    <root><priority value="info"/><appender-ref ref="ConsoleAppender"/></root>
</log4j:configuration>
