<wsdl:definitions
  targetNamespace="http://www.intalio.com/workflow/forms/AbsenceRequest/AbsenceRequest"
  xmlns="http://schemas.xmlsoap.org/wsdl/"
  xmlns:ar="http://www.intalio.com/workflow/forms/AbsenceRequest/AbsenceRequest"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <wsdl:types>
    <xsd:schema elementFormDefault="qualified" targetNamespace="http://www.intalio.com/workflow/forms/AbsenceRequest/AbsenceRequest">
      <xsd:include schemaLocation="AbsenceRequest.xform.notify.xsd"/>
    </xsd:schema>
  </wsdl:types>
  <!-- Messages -->
  <wsdl:message name="notifyRequest">
    <wsdl:part element="ar:notifyRequest" name="root"/>
  </wsdl:message>
  <wsdl:message name="notifyResponse">
    <wsdl:part element="ar:notifyResponse" name="root"/>
  </wsdl:message>
  <!-- Port Types -->
  <wsdl:portType name="NotificationPort">
    <wsdl:operation name="notify">
      <wsdl:input message="ar:notifyRequest" name="notifyRequest"/>
      <wsdl:output message="ar:notifyResponse" name="notifyResponse"/>
    </wsdl:operation>
  </wsdl:portType>
  <!-- SOAP Bindings -->
  <wsdl:binding name="NotificationSoapBinding" type="ar:NotificationPort">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <wsdl:operation name="notify">
      <soap:operation soapAction="notify" style="document"/>
      <wsdl:input>
        <soap:body
          namespace="http://www.intalio.com/workflow/forms/AbsenceRequest/AbsenceRequest" use="literal"/>
      </wsdl:input>
      <wsdl:output>
        <soap:body
          namespace="http://www.intalio.com/workflow/forms/AbsenceRequest/AbsenceRequest" use="literal"/>
      </wsdl:output>
    </wsdl:operation>
  </wsdl:binding>
  <!-- Services -->
  <wsdl:service name="NotifyService">
    <wsdl:port binding="ar:NotificationSoapBinding" name="NotificationPort">
      <soap:address location="http://localhost:8080/fds/workflow"/>
    </wsdl:port>
  </wsdl:service>
</wsdl:definitions>
