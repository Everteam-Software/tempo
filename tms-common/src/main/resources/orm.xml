<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <mapped-superclass class="org.intalio.tempo.workflow.auth.BaseRestrictedEntity"/>

    <entity class="org.intalio.tempo.workflow.task.Notification">
        <table name="tasks" />
        <inheritance strategy=" JOINED" />
       
    </entity>

    <entity class="org.intalio.tempo.workflow.task.PIPATask">
        <inheritance strategy="SINGLE_TABLE" />
        <attributes>

            <basic name="_processEndpoint">
                <column name="process_endpoing"></column>
            </basic>

            <basic name="_initMessageNamespaceURI">
                <column name="init_message_namespaceURI"></column>
            </basic>

            <basic name="_initOperationSOAPAction">
                <column name="init_operation_soap_action"></column>
            </basic>

        </attributes>
    </entity>

</entity-mappings>