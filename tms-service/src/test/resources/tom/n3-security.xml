<security>

    <defaultRealm>intalio</defaultRealm>

    <caseSensitive>false</caseSensitive>

    <realm identifier="system">
      <role identifier="SYSTEM">
        <description>The system role.</description>
      </role>
    </realm>
    
    <realm identifier="test">
      <user identifier="test">
        <name>Product Manager #1</name>
        <email>prod-manager1@intalio.com</email>
        <password>test</password>
      </user>
      <user identifier="system-test">
        <name>Product Manager #1</name>
        <email>prod-manager1@intalio.com</email>
        <password>test</password>
        <assignRole>system/SYSTEM</assignRole>
      </user>
    </realm>

    <realm identifier="intalio">
        
        <user identifier="prod-manager1">
            <name>Product Manager #1</name>
            <email>prod-manager1@intalio.com</email>
            <password>prod-manager1</password>

            <assignRole>prod-manager</assignRole>
        </user>

        <user identifier="eng-manager1">
            <name>Engineer Manager #1</name>
            <email>eng-manager1@intalio.com</email>
            <password>eng-manager1</password>

            <assignRole>eng-manager</assignRole>
        </user>

        <user identifier="sr-eng1">
            <name>Senior Engineer #1</name>
            <email>sr-eng1@intalio.com</email>
            <password>sr-eng1</password>

            <assignRole>sr-eng</assignRole>
        </user>

        <user identifier="eng1">
            <name>Engineer #1</name>
            <email>eng1@intalio.com</email>
            <password>eng1</password>

            <assignRole>eng</assignRole>
        </user>

        <user identifier="eng2">
            <name>Engineer #2</name>
            <email>eng2@intalio.com</email>
            <password>eng2</password>

            <assignRole>eng</assignRole>
        </user>


        <role identifier="prod-manager">
        
            <description>Product Manager</description>
            
            <descendantRole>manager</descendantRole>
            
            <permission operation="write"   object="MRD"/>
            <permission operation="approve" object="specification"/>
        </role>

        <role identifier="eng-manager">
            <description>Engineering Manager</description>
            
            <descendantRole>manager</descendantRole>
            <descendantRole>sr-eng</descendantRole>
            
            <permission operation="release" object="cvs"/>
            <permission operation="approve" object="specification"/>
            <permission operation="review" object="MRD"/>
        </role>

        <role identifier="manager">
            <description>Generic Manager</description>
            
            <permission operation="perf-review" object="report"/>
        </role>

        <role identifier="sr-eng">
            <description>Senior Software Engineer</description>
            
            <descendantRole>eng</descendantRole>

            <permission operation="review" object="code"/>
            <permission operation="review" object="specification"/>
            <permission operation="write"  object="specification"/>
        </role>

        <role identifier="eng">
            <description>Software Engineer</description>
            
            <permission operation="read"   object="specification"/>
            <permission operation="read"   object="MRD"/>
            <permission operation="read"   object="code"/>
            <permission operation="write"  object="code"/>
            <permission operation="commit" object="cvs"/>
        </role>
        
    </realm>

        
    <realm identifier="exolab">

        <user identifier="castor">
            <name>Castor Workaholic</name>
            <email>castor@exolab.org</email>
            <password>castor</password>

            <assignRole>committer</assignRole>
        </user>
        
        <user identifier="tyrex">
            <name>Tyranosaurus Rex</name>
            <email>tyrex@exolab.org</email>
            <password>tyrex</password>

            <assignRole>committer</assignRole>
        </user>

        <user identifier="anonymous">
            <name>Anonymous Coward</name>
            <email></email>
            <password>anonymous</password>

            <assignRole>participant</assignRole>
        </user>

        <role identifier="committer">
            <description>Committer</description>
            
            <descendantRole>participant</descendantRole>

            <permission operation="commit" object="cvs"/>
        </role>

        <role identifier="participant">
            <description>Community Participant</description>
            
            <permission operation="checkout" object="cvs"/>
        </role>

    </realm>
    
</security>