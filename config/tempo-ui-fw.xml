<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="configuration" class="org.intalio.tempo.uiframework.Configuration" factory-method="getInstance">
        <property name="serviceEndpoint" value="/axis2/services/TaskManagementServices"/>
        <property name="pagingLength" value="10"/>
        <property name="refreshTime" value="5"/>
    </bean>

	<bean id="formManager" class="org.intalio.tempo.uiframework.forms.GenericFormManager">
		<property name="mappings">
		<map>
			<entry key="PIPATask">
				<map>
					<entry key="default" value="/xFormsManager/init"/>
				</map>
			</entry>
			<entry key="PATask">
				<map>
					<entry key="default" value="/xFormsManager/act"/>
				</map>
			</entry>
			<entry key="Notification">
				<map>
					<entry key="default" value="/xFormsManager/notification"/>
				</map>
			</entry>
		</map>
        </property>
	</bean>
	
    <bean id="formManagerBroker" class="org.intalio.tempo.uiframework.forms.FormManagerBroker" factory-method="getInstance">
        <property name="formManager">
            <ref bean="formManager"/>
        </property>
    </bean>

    <bean id="tokenService" class="org.intalio.tempo.security.ws.TokenClient">
        <constructor-arg value="http://localhost:8080/axis2/services/TokenService"/>
    </bean>

    <bean id="applicationState" class="org.intalio.tempo.uiframework.UIFWApplicationState"/>
</beans>