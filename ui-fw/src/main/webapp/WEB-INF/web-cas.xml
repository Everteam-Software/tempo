    <servlet-name>ProxyTicketReceptor</servlet-name>
    <servlet-class>
			edu.yale.its.tp.cas.proxy.ProxyTicketReceptor
		</servlet-class>
  </servlet> -->
  <!-- <servlet-mapping>
    <servlet-name>ProxyTicketReceptor</servlet-name>
    <url-pattern>/CasProxyServlet</url-pattern>
  </servlet-mapping> -->
<!-- CAS config ends -->
    
    <!-- servlet -->

    <servlet>
        <servlet-name>springapp</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>file:${org.intalio.tempo.configDirectory}/tempo-ui-fw-servlet.xml</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>springapp</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>versionsServlet</servlet-name>
        <servlet-class>org.intalio.tempo.uiframework.versions.BpmsVersionsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>versionsServlet</servlet-name>
        <url-pattern>/versions</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>iCalServlet</servlet-name>
        <servlet-class>org.intalio.tempo.uiframework.export.iCalServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>iCalServlet</servlet-name>
        <url-pattern>/ical</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>CSVServlet</servlet-name>
        <servlet-class>org.intalio.tempo.uiframework.export.CSVServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CSVServlet</servlet-name>
        <url-pattern>/csv</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>PDFServlet</servlet-name>
      <servlet-class>org.intalio.tempo.uiframework.export.PDFServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>PDFServlet</servlet-name>
      <url-pattern>/pdf</url-pattern>
    </servlet-mapping>


    <!-- Welcome File List -->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/genError.jsp</location>
    </error-page>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>/WEB-INF/jsp/*</url-pattern>
			<el-ignored>false</el-ignored>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
		</jsp-property-group>

<!-- 		<taglib>
			<taglib-uri>http://java.sun.com/portlet</taglib-uri>
			<taglib-location>/WEB-INF/tld/liferay-portlet.tld</taglib-location>
		</taglib> -->

	</jsp-config>

    <locale-encoding-mapping-list>
        <locale-encoding-mapping>
            <locale>en</locale>
            <encoding>iso-8859-1</encoding>
        </locale-encoding-mapping>

        <locale-encoding-mapping>
            <locale>ua</locale>
            <encoding>cp1251</encoding>
        </locale-encoding-mapping>
    </locale-encoding-mapping-list>
</web-app>