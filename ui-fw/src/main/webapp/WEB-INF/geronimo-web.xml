<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://geronimo.apache.org/xml/ns/j2ee/web-1.1">

	<dep:environment xmlns:dep="http://geronimo.apache.org/xml/ns/deployment-1.1">
		<dep:moduleId>
		    <dep:groupId>org.intalio.tempo</dep:groupId>
		    <dep:artifactId>ui-fw</dep:artifactId>
		    <dep:version>SNAPSHOT</dep:version>
		    <dep:type>war</dep:type>
		</dep:moduleId>
		<dependencies>
			<dependency>
				<groupId>org.apache.pluto</groupId>
				<artifactId>pluto</artifactId>
				<version>1.1.4</version>
				<type>war</type>
				<import>classes</import>
			</dependency>
			<dependency>
				<groupId>org.apache.pluto</groupId>
				<artifactId>pluto-taglib</artifactId>
				<version>1.1.4</version>
				<type>jar</type>
				</dependency>
			<dependency>
                <groupId>portlet-api</groupId>
                <artifactId>portlet-api</artifactId>
                <version>1.0</version>
                <type>jar</type>
            </dependency>
			<dependency>
                <groupId>json-taglib</groupId>
                <artifactId>json-taglib</artifactId>
                <version>0.4.1</version>
                <type>jar</type>
            </dependency>
		</dependencies>

        <hidden-classes>
          <filter>org.intalio.tempo</filter> 
          <filter>org.springframework</filter> 
          <filter>META-INF/spring</filter> 
        </hidden-classes>
        
        <!-- 

        <inverse-classloading />

         -->
	</dep:environment>
	<context-root>/ui-fw</context-root>
</web-app>