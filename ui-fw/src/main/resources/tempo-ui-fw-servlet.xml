<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
          "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <import resource="classpath:workflow/tempo-ui-fw-template-beans.xml"/>
    <bean class="org.springframework.web.servlet.view.XmlViewResolver">
	    <property name="location">
	        <value>/WEB-INF/views.xml</value>
	     </property>
	    <property name="order" value="0"/>
  </bean>

  <bean id="viewResolver"
        class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass">
      <value>org.springframework.web.servlet.view.JstlView</value>
    </property>
    <property name="prefix">
      <value>/WEB-INF/jsp/</value>
    </property>
    <property name="suffix">
      <value>.jsp</value>
    </property>
  </bean>

  <!-- Tasks section -->
  <bean id="tasksDefaultAction"
        class="org.intalio.tempo.web.controller.ActionDef">
    <property name="actionName" value="default"/>
    <property name="actionClass"
              value="org.intalio.tempo.uiframework.actions.TasksAction"/>
  </bean>

  <bean id="oneTaskDefaultAction"
        class="org.intalio.tempo.web.controller.ActionDef">
    <property name="actionName" value="default"/>
    <property name="actionClass"
              value="org.intalio.tempo.uiframework.actions.OneTaskAction"/>
  </bean>

  <bean id="tasksController"
        class="org.intalio.tempo.web.controller.SecuredController">
    <property name="commandClass" value="java.lang.Object"/>
    <property name="defaultAction">
      <ref bean="tasksDefaultAction"/>
    </property>
    <property name="actionDefs">
      <list>
        <ref bean="tasksDefaultAction"/>
      </list>
    </property>
  </bean>

  <bean id="oneTaskController"
        class="org.intalio.tempo.web.controller.SecuredController">
    <property name="commandClass" value="java.lang.Object"/>
    <property name="defaultAction">
      <ref bean="oneTaskDefaultAction"/>
    </property>
    <property name="actionDefs">
      <list>
        <ref bean="oneTaskDefaultAction"/>
      </list>
    </property>
  </bean>

  <bean id="updatesController"
        class="org.intalio.tempo.web.controller.SecuredController">
    <property name="commandClass" value="java.lang.Object"/>
    <property name="defaultAction">
      <ref bean="tasksDefaultAction"/>
    </property>
    <property name="actionDefs">
      <list>
        <ref bean="tasksDefaultAction"/>
      </list>
    </property>
  </bean>

  <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
	<property name="basenames">
	      <list>
		    <value>workflow/messages</value>
	      </list>
	</property>
  </bean>

  <bean name="jsonView" class="org.springframework.web.servlet.view.json.JsonView" />

  <bean id="rbacAdminClient" class="org.intalio.tempo.security.ws.RBACAdminClient">
    <constructor-arg value="http://localhost:8080/intalio/ode/processes/RBACAdminService"/>
  </bean>

  <bean id="rbacQueryClient" class="org.intalio.tempo.security.ws.RBACQueryClient">
    <constructor-arg value="http://localhost:8080/intalio/ode/processes/RBACQueryService"/>
  </bean>

  <bean id="vacationController" class="org.intalio.tempo.uiframework.VacationController">
	<constructor-arg index="0">
	      <ref bean="jsonView"/>
	</constructor-arg>
	<constructor-arg index="1" ref="rbacAdminClient"/>
	<constructor-arg index="2" ref="rbacQueryClient"/>
  </bean>

  <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/tasks.htm">tasksController</prop>
        <prop key="/updates.htm">updatesController</prop>
        <prop key="/vacation.htm">vacationController</prop>
        <prop key="/atask.htm">oneTaskController</prop>
      </props>
    </property>
  </bean>
</beans>