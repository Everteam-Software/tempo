<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
          "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass">
			<value>org.springframework.web.servlet.view.JstlView</value>
		</property>
		<property name="prefix">
			<value>/WEB-INF/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<!-- Login section -->
	<bean id="loginController" class="org.intalio.tempo.web.controller.LoginController">
		<constructor-arg index="0" ref="tokenService" />
		<constructor-arg index="1" value="tasks.htm" />

		<property name="commandClass"
			value="org.intalio.tempo.web.controller.LoginCommand" />
		<property name="commandName">
			<value>login</value>
		</property>
		<property name="validator">
			<bean id="loginValidator"
				class="org.intalio.tempo.web.controller.LoginController$LoginValidator" />
		</property>
		<property name="loginPageURL" value="/login.htm" />
	</bean>

	<!-- Tasks section -->
	<bean id="tasksDefaultAction" class="org.intalio.tempo.web.controller.ActionDef">
		<property name="actionName" value="default" />
		<property name="actionClass"
			value="org.intalio.tempo.web.controller.FakeTasksAction" />
	</bean>

	<bean id="tasksController" class="org.intalio.tempo.web.controller.SecuredController">
		<property name="commandClass" value="java.lang.Object" />
		<property name="defaultAction">
			<ref bean="tasksDefaultAction" />
		</property>
		<property name="actionDefs">
			<list>
				<ref bean="tasksDefaultAction" />
			</list>
		</property>
	</bean>

	<bean id="updatesController" class="org.intalio.tempo.web.controller.SecuredController">
		<property name="commandClass" value="java.lang.Object" />
		<property name="defaultAction">
			<ref bean="tasksDefaultAction" />
		</property>
		<property name="actionDefs">
			<list>
				<ref bean="tasksDefaultAction" />
			</list>
		</property>
	</bean>

	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<value>/WEB-INF/classes/messages</value>
		</property>
	</bean>

	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/login.htm">loginController</prop>
				<prop key="/tasks.htm">tasksController</prop>
				<prop key="/updates.htm">updatesController</prop>
			</props>
		</property>
	</bean>

</beans>